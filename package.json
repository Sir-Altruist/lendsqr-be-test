{
  "name": "lendsqr-be-test",
  "version": "1.0.0",
  "main": "dist/server.js",
  "repository": "https://github.com/Sir-Altruist/lendsqr-be-test.git",
  "author": "Sir_Altruist <eshooluwasegun98@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "npm run migrate:latest && cross-env nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "cross-env NODE_ENV=TEST nyc --reporter=lcov --reporter=text --reporter=html mocha -r ts-node/register __tests__/*.{js,ts,md,json} --timeout 10000 -c --require @babel/register --exit",
    "migrate:make": "knex --knexfile src/config/knexfile.ts migrate:make",
    "migrate:latest": "knex --knexfile src/config/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/config/knexfile.ts migrate:rollback",
    "copy-js": "cp src/**/*.js dist/config/",
    "build": "rimraf dist && tsc",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\"",
    "prettier:check": "yarn run prettier:cli -- -l",
    "prettier:fix": "yarn run prettier:cli -- --write",
    "eslint": "eslint --report-unused-disable-directives .",
    "eslint:fix": "yarn run eslint -- --fix",
    "pretest": "cross-env NODE_ENV=test npm run migrate:rollback && cross-env NODE_ENV=test npm run migrate:latest",
    "prestart": "npm run migrate:latest",
    "docker:start": "docker-compose up",
    "docker:stop": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:push": "docker-compose push"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "lint-staged": {
    "*.{ts}": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.1",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.1",
    "pino": "^8.15.3",
    "pino-pretty": "^10.2.0",
    "rimraf": "^5.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/register": "^7.23.7",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.4",
    "@types/chai": "^4.3.16",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.4.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "is-ci": "^3.0.1",
    "mocha": "^10.4.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^3.0.1",
    "nyc": "^17.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
